{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Issue</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ issue.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ issue.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ issue.slug }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if issue.createdAt %}{{ issue.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if issue.updatedAt %}{{ issue.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('home') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('issue_edit', { 'id': issue.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-warning">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
{% endblock %}
