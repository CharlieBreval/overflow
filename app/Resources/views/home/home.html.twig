{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Issues list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
            <tr>
                <td><a href="{{ path('issue_show', { 'id': issue.id }) }}">{{ issue.id }}</a></td>
                <td>{{ issue.title }}</td>
                <td>{{ issue.slug }}</td>
                <td>{% if issue.createdAt %}{{ issue.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('issue_show', { 'id': issue.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('issue_edit', { 'id': issue.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('issue_new') }}">Create a new issue</a>
        </li>
    </ul>
    </div>
{% endblock %}
